<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="想知道你的 BMI 多少嗎？"
        android:textSize="24dp"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ask"
        android:minWidth="275dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快輸入身高體重吧！"
        android:id="@+id/result"
        android:layout_marginTop="24dp"
        android:textSize="22dp"
        android:layout_below="@+id/ask"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputHeight"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/result"
        android:layout_toEndOf="@+id/textView3"
        android:minWidth="150dp"
        android:textAlignment="center"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你的身高"
        android:id="@+id/textView3"
        android:textSize="24dp"
        android:layout_alignTop="@+id/inputHeight"
        android:layout_alignStart="@+id/ask" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你的體重"
        android:id="@+id/textView5"
        android:textSize="24dp"
        android:layout_below="@+id/inputHeight"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputWeight"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignEnd="@+id/inputHeight"
        android:layout_toEndOf="@+id/textView5"
        android:textAlignment="center"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公分"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/ask" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公斤"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/textView6" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快幫我算！"
        android:id="@+id/button"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/inputWeight"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="cal" />

</RelativeLayout>
